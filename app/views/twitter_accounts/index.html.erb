<h1 class="place-content-center	mb-5">Twitter Accounts</h1>

<%= link_to 'Connect Twitter Account', '/auth/twitter', method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full' %>

<div class="place-content-center	">
	<% @twitter_accounts.each do |twitter_account| %>
		<div class="mt-5">
			<%= image_tag twitter_account.image, class: '' %>
			<%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank%>
			<%= button_to "Disconnect", twitter_account, method: :delete, data: { confirm: "Are you sure?"} %>
		</div>
	<% end %>
</div>